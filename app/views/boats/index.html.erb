<p id="notice"><%= notice %></p>

<h1>All Boats</h1>

<table>
  <thead>
    <tr>
      <th>Boat</th>
      <th>Capacity (containers)</th>
      <th>Current location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.bname %></td>
        <td><%= boat.capacity %></td>
        <td><%= boat.current_location %></td>
        <td><%= boat.user.companyname %></td>
        <td><%= link_to 'Show', boat %></td>
        <td><%= link_to 'Edit', edit_boat_path(boat) %></td>
        <td><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

