<% if current_user %>
  <p id="notice"><%= notice %></p>

  <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

<!-- <div id="users_table">

  
</div> -->


<h1>Users</h1>


  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Company Name</th>
        <th>Email</th>
        <th>Company Photo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @user.fname %></td>
          <td><%= @user.lname %></td>
          <td><%= @user.companyname %></td>
          <td><%= @user.email %></td>
          <td><%= image_tag @user.photo.url(:medium) %></td>
          <td><%= link_to 'Show', @user %></td>
          <td><%= link_to 'Edit', edit_user_path(@user) %></td>
          <td><%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
  </table>

  <br>

<%= link_to "Your Company's Boats", boats_path %>
<%= link_to "Your Company's Jobs", jobs_path(@user) %>
<%= link_to('Log_out', destroy_user_session_path, method: :delete) %>

<% end %>
